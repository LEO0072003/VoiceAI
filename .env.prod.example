# ===========================================
# VoiceAI Environment Configuration
# Copy this file to .env and fill in your values
# ===========================================

# ===========================================
# PostgreSQL Database (Docker container)
# ===========================================
POSTGRES_USER=voiceai
POSTGRES_PASSWORD=voiceai123
POSTGRES_DB=voiceai_db

# ===========================================
# Backend Configuration
# ===========================================
# Database URL (uses Docker PostgreSQL service name)
DATABASE_URL=postgresql://voiceai:voiceai123@postgres:5432/voiceai_db

# Redis URL (uses Docker Redis service name)
REDIS_URL=redis://redis:6379

# ===========================================
# API Keys
# ===========================================
# Groq API Key (for LLM)
GROQ_API_KEY=your-groq-api-key

# Tavus API Key (for video avatar)
TAVUS_API_KEY=your-tavus-api-key
TAVUS_REPLICA_ID=your-replica-id
TAVUS_PERSONA_ID=your-persona-id

# Optional: Deepgram (for STT)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Optional: Cartesia (for TTS)
CARTESIA_API_KEY=your-cartesia-api-key

# ===========================================
# Application Settings
# ===========================================
# Public URL of your application (used for Tavus webhooks)
PUBLIC_URL=https://your-domain.com
BACKEND_PUBLIC_URL=https://your-domain.com

# JWT Secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80

# Python settings
PYTHONUNBUFFERED=1

# ===========================================
# Environment
# ===========================================
NODE_ENV=production

# ===========================================
# Frontend Configuration (Vite)
# ===========================================
# Backend API URL for frontend requests
VITE_API_URL=http://localhost:8000
