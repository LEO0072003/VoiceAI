# VoiceAI Production Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=voiceai
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=voiceai_db

# ===========================================
# API Keys
# ===========================================
# Groq API Key (for LLM)
GROQ_API_KEY=your-groq-api-key

# Tavus API Key (for video avatar)
TAVUS_API_KEY=your-tavus-api-key
TAVUS_REPLICA_ID=your-replica-id
TAVUS_PERSONA_ID=your-persona-id

# ===========================================
# Application Settings
# ===========================================
# Public URL of your application (used for webhooks and callbacks)
PUBLIC_URL=https://your-domain.com

# JWT Secret for authentication (generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# ===========================================
# Environment
# ===========================================
NODE_ENV=production
